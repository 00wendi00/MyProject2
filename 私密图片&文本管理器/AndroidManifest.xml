<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.hainu.wendi"
    android:versionCode="1"
    android:versionName="1.0" >

    <instrumentation 
        android:name="android.test.InstrumentationTestRunner"
        android:targetPackage="cn.hainu.wendi"
        ></instrumentation>
    
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="22" />
    
	<uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <application
        android:hardwareAccelerated="false"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
      	android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
      	
        <uses-library android:name="android.test.runner"/>
        
        <activity
            android:name="cn.hainu.lock.Activity_Lock_interface"
            android:screenOrientation="portrait"
            >        
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
             android:screenOrientation="portrait"
            android:name="cn.hainu.wendi.Activity_Main"
            android:launchMode="singleTask"
            ></activity>
        
        <service 
            android:name="cn.hainu.wendi.Service_Initialization"
            >
			<intent-filter>
				<!-- 为该Service组件的intent-filter配置action -->
				<action android:name="cn.hainu.wendi.BIND_SERVICE" />
			</intent-filter>	
		</service>
		
        <activity 
            android:windowSoftInputMode="adjustResize|adjustPan"
            android:name="cn.hainu.texts.Activity_Text"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|screenSize"
            ></activity>
        
        <activity 
            android:name="cn.hainu.wendi.Activity_Setting"
            android:screenOrientation="portrait"
            android:configChanges="screenSize"
            ></activity>
        
        <activity 
            android:name="cn.hainu.Images.Activity_ImageV"
             android:screenOrientation="portrait"
            android:launchMode="singleTop"
            ></activity>
        
        <activity 
            android:name="cn.hainu.Images.Activity_Addfolder"
             android:screenOrientation="portrait"
            ></activity>
        
        <activity 
            android:name="cn.hainu.Images.Activity_Addimage"
             android:screenOrientation="portrait"
            ></activity>
    </application>
</manifest>
